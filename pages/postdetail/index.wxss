page {
  background-color: #fff;
}
.page_post_detail .top_content {
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.12);
  background-color: #fff;
  z-index: 99;
  margin-bottom: 10px;
  padding: 15rpx;
}
.page_post_detail .top_content .post_title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.page_post_detail .top_content .post_info_list {
  display: flex;
}
.page_post_detail .top_content .post_info_list .author_name,
.page_post_detail .top_content .post_info_list .view_count,
.page_post_detail .top_content .post_info_list .like_count,
.page_post_detail .top_content .post_info_list .post_time {
  margin-right: 20rpx;
  font-size: 27rpx;
  color: rgba(0, 0, 0, 0.6);
  margin: 30rpx 0;
  padding-right: 20rpx;
  display: flex;
  align-items: center;
}
.page_post_detail .top_content .post_info_list .author_name .the_tag,
.page_post_detail .top_content .post_info_list .view_count .the_tag,
.page_post_detail .top_content .post_info_list .like_count .the_tag,
.page_post_detail .top_content .post_info_list .post_time .the_tag {
  padding-right: 10rpx;
}
.page_post_detail .post_content {
  padding: 35rpx;
  min-height: 400rpx;
  background-color: #fff;
  font-size: 32rpx;
  line-height: 60rpx;
  padding-bottom: 50rpx;
}
.page_post_detail .footer_option {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 0.05rpx solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.page_post_detail .footer_option .left_like {
  font-size: 35rpx;
}
.page_post_detail .footer_option .right_options .share,
.page_post_detail .footer_option .right_options .collection,
.page_post_detail .footer_option .right_options .comment {
  font-weight: 700;
  color: #545454;
  font-size: 50rpx;
  margin-right: 30rpx;
}
.comment_wrap {
  margin-top: 10px;
  padding: 20rpx;
  padding-bottom: 100rpx;
  position: relative;
}
.comment_wrap .comment_item {
  display: flex;
  padding-left: 25rpx;
  margin-bottom: 30rpx;
}
.comment_wrap .comment_item .user_avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.comment_wrap .comment_item .comment_content_wrap {
  flex: 1;
}
.comment_wrap .comment_item .comment_content_wrap .username {
  font-weight: 700;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.comment_wrap .comment_item .comment_content_wrap .content {
  font-size: 27rpx;
  color: #444;
}
.comment_wrap .comment_item .like_wrap {
  margin-top: 25rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: var(--lightTextColor);
}
.comment_wrap .comment_item .like_wrap .like_icon {
  font-size: 35rpx;
}
.comment_wrap .comment_item .active {
  color: var(--themeColor);
}
.comment_wrap .send_comment {
  position: absolute;
  width: 100%;
  height: 80rpx;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.comment_wrap .send_comment .send_input {
  width: 600rpx;
}
.comment_wrap .send_comment .send_btn {
  width: 85rpx;
}
