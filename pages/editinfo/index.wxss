.edit_userinfo_page .info_wrap {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-bottom: 0.1px solid #ccc;
  padding: 5rpx 0;
}
.edit_userinfo_page .info_wrap .name {
  width: 100rpx;
  height: 70rpx;
  text-align: left;
  padding-left: 30rpx;
  line-height: 70rpx;
  color: #646566;
  font-size: 30rpx;
}
.edit_userinfo_page .info_wrap .value_select {
  flex: 1;
  display: flex;
  flex-direction: row;
}
.edit_userinfo_page .info_wrap .value_select .the_text {
  flex: 1;
  font-size: 28rpx;
}
.edit_userinfo_page .options {
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: center;
}
